{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@/*": ["/*"],
      "@components": ["components"],
      "@components/*": ["components/*"],
      "@public": ["public"],
      "@public/*": ["public/*"],
      "@interfaces": ["interfaces"],
      "@interfaces/*": ["interfaces/*"],
      "@styles": ["styles"],
      "@styles/*": ["styles/*"],
      "@store": ["store"],
      "@store/*": ["store/*"],
      "@utils": ["utils"],
      "@utils/*": ["utils/*"],
      "@services": ["services"],
      "@services/*": ["services/*"],
      "@hooks": ["hooks"],
      "@hooks/*": ["hooks/*"],
      "@context": ["context"],
      "@context/*": ["context/*"],
      "@core": ["core"],
      "@core/*": ["core/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
